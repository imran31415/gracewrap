{
  "dashboard": {
    "id": null,
    "title": "GraceWrap Graceful Shutdown Metrics",
    "tags": ["gracewrap", "kubernetes", "graceful-shutdown"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "panels": [
      {
        "id": 1,
        "title": "Readiness Status",
        "type": "stat",
        "targets": [
          {
            "expr": "gracewrap_readiness_status",
            "legendFormat": "Ready Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "Not Ready"}}, "type": "value"},
              {"options": {"1": {"text": "Ready"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "In-Flight Requests",
        "type": "timeseries",
        "targets": [
          {
            "expr": "gracewrap_inflight_requests",
            "legendFormat": "In-Flight Requests",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"axisPlacement": "auto", "drawStyle": "line"}
          }
        },
        "gridPos": {"h": 8, "w": 10, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(gracewrap_http_requests_total[30s])",
            "legendFormat": "HTTP Requests/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"axisPlacement": "auto", "drawStyle": "line"}
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0}
      },
      {
        "id": 4,
        "title": "Total Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "gracewrap_http_requests_total",
            "legendFormat": "Total HTTP Requests",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Shutdown Events",
        "type": "stat",
        "targets": [
          {
            "expr": "gracewrap_shutdowns_total",
            "legendFormat": "Total Shutdowns",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8}
      },
      {
        "id": 6,
        "title": "Shutdown Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "gracewrap_shutdown_duration_seconds",
            "legendFormat": "Shutdown Duration",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ],
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "refresh": "5s",
    "version": 1
  }
}
